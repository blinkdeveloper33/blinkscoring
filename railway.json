{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd $RAILWAY_SERVICE_DIR && ls -la && echo 'PYTHON PATH:' && python -c 'import sys; print(sys.path)' && python -m uvicorn service_scoring.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "plugins": {},
  "services": {
    "scoring": {
      "process": "scoring",
      "memory": "512MB",
      "healthcheck": {
        "path": "/health",
        "interval": 15,
        "timeout": 5
      },
      "env": {
        "DATABASE_URL": "${env.DATABASE_URL}"
      }
    },
    "cron": {
      "process": "cron",
      "memory": "512MB",
      "cron": {
        "schedule": "*/5 * * * *"
      },
      "env": {
        "DATABASE_URL": "${env.DATABASE_URL}",
        "SCORING_URL": "https://${services.scoring.domains[0]}"
      }
    },
    "trainer": {
      "process": "trainer",
      "memory": "1GB",
      "cron": {
        "schedule": "0 2 * * 0"
      },
      "env": {
        "DATABASE_URL": "${env.DATABASE_URL}"
      }
    }
  },
  "volumes": {
    "models": {
      "mountPath": "/models",
      "name": "blinkscoring-models"
    }
  }
} 